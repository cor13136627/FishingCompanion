<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".HomeActivity">

    <Button
        android:id="@+id/CaughtAFishButton"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:text="Caught A Fish!"
        />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:text="Update"
        android:onClick="updateButton"
        android:layout_toRightOf="@+id/CaughtAFishButton"/>

    <EditText
        android:id="@+id/editTextSpecies"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="5dp"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        />
    <EditText
        android:id="@+id/editTextWeight"
        android:layout_toRightOf="@+id/editTextSpecies"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        />

    <ListView
        android:layout_below="@+id/editTextSpecies"
        android:id="@+id/FishList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="#212121"
        android:dividerHeight="2dp"
        />





</RelativeLayout>
